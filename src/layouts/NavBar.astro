<nav class="flex items-center px-4 gap-5 w-full bg-zinc-950/0 transition-colors duration-500 backdrop-blur-[0px] h-full!">
   <!-- Left: Logo -->
   <div class="flex-shrink-0 h-8">
      <a href="/" class="h-full block aspect-square">
         <img class="block h-full" src="/images/logo.webp" alt="logo of website">
      </a>
   </div>

   <!-- Center: Nav Links -->
   <div class="flex-1 flex justify-end h-7 max-lg:hidden">
      <ul class="menu p-0! h-full! menu-horizontal px-1 space-x-4">
         <li><a class="py-0! flex items-center h-full!" href="/tools">Tools</a></li>
         <li><a class="py-0! flex items-center h-full!" href="/lucid">Lucid</a></li>
      </ul>
   </div>
   <div class="flex-1 flex justify-end h-8 lg:hidden">
      <label for="sidebar" aria-label="open sidebar" class="btn btn-square btn-ghost h-full!">
         <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block h-6 w-6 stroke-current">
            <path
               stroke-linecap="round"
               stroke-linejoin="round"
               stroke-width="2"
               d="M4 6h16M4 12h16M4 18h16"></path>
         </svg>
      </label>
   </div>
</nav>
<script>
   const navbar = document.querySelector("nav");
   const navbarToggle = document.querySelectorAll("[aria-label*='sidebar']");

   navbarToggle.forEach(toggle => {
      let action = toggle.ariaLabel.split(" ")[0];
      console.log(action);
   });

   window.addEventListener("scroll", () => {
      if (window.scrollY > 10) {
         navbar.style.background = "rgba(0, 0, 0, 0.65)";
         navbar.style.backdropFilter = "blur(10px)";
      } else {
         navbar.style.background = "rgba(0, 0, 0, 0)";
         navbar.style.backdropFilter = "blur(0px)";
      }
   });
</script>
