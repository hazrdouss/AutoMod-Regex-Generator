---
// layout imports
import Head from "../layouts/MainHead.astro";
import NavBar from "./NavBar.astro";
const { bodyClasses, mainClasses, title, description } = Astro.props;
---

<html data-theme="dark" lang="en">
<Head {title} />
<body class="relative bg-zinc-900 selection:bg-zinc-200/20" class:list={[bodyClasses]}>
<div class="drawer">
   <input id="sidebar" type="checkbox" class="drawer-toggle" />
   <div class="drawer-content flex flex-col">
      <header class="sticky top-0 right-0 left-0 z-10 h-14 ">
         <NavBar />
      </header>
      <main class="m-1.5 mt-0 border border-white/10 rounded-md" class:list={mainClasses}>
         <slot />
      </main>
   </div>
   <div class="z-10 drawer-side">
      <label for="sidebar" aria-label="close sidebar" class="drawer-overlay cursor-default!"></label>
      <div class="flex flex-col gap-4 bg-base-100 min-h-full w-80 p-4">
         <a href="/" class="h-8 aspect-square flex items-center gap-2">
            <img class="block h-full" src="/images/logo.webp" alt="logo of website">
            <h2>Hazrd</h2>
         </a>
         <ul class="menu p-0! h-full! w-full! ">
            <li><a href="/tools">Tools</a></li>
            <li><a href="/lucid">Lucid</a></li>
         </ul>
      </div>
   </div>
</div>

<script>
   import "prismjs/prism";
   import "../scripts/index";
</script>
</body>
</html>
